                    <asp:GridView ID="GridView1" runat="server" OnSelectedIndexChanged="GridView1_SelectedIndexChanged" AutoGenerateColumns="False" DataSourceID="SqlDataSource2" CssClass="table text-center align-middle" Width="100%" BorderStyle="None">
                        <Columns>
                            <asp:BoundField DataField="bookId" HeaderText="ID" SortExpression="bookId" FooterText="Total:"/>
                            <asp:BoundField DataField="productName" HeaderText="Product Name" SortExpression="productName" />
                            <asp:BoundField DataField="price" HeaderText="Price (RM)" SortExpression="price" />
                            <asp:TemplateField>
                                <ItemTemplate>
                                    <asp:Button ID="Button2" runat="server" Text="-" OnClick="M_Click" CssClass="btn"/>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:BoundField DataField="quantity" HeaderText="Quantity" SortExpression="quantity" />
                            <asp:TemplateField>
                                <ItemTemplate>
                                    <asp:Button ID="Button3" runat="server" Text="+" OnClick="P_Click" CssClass="btn"/>
                                </ItemTemplate>
                            </asp:TemplateField>
                            <asp:BoundField DataField="total" HeaderText="Total (RM)" SortExpression="total" />   
                            <asp:TemplateField>
                                <ItemTemplate>
                                    <asp:Button ID="Button4" runat="server" Text="Remove" OnClick="Remove_Click" CssClass="btn"/>
